@model DutchTreat.ViewModel.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<!--Section: Contact v.2-->
<section class="mb-4">
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5">
        Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.
    </p>

    <div class="row">
        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" method="post">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input asp-for="@Model.Name" class="form-control">
                            <label asp-for="@Model.Name">Your name</label>
                            <span class="text-danger" asp-validation-for="@Model.Name"></span>
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input asp-for="@Model.Email" class="form-control">
                            <label asp-for="@Model.Email">Your email</label>
                            <span class="text-danger" asp-validation-for="@Model.Email"></span>
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input asp-for="@Model.Subject" class="form-control">
                            <label asp-for="@Model.Subject">Subject</label>
                            <span class="text-danger" asp-validation-for="@Model.Subject"></span>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                            <textarea type="text" asp-for="@Model.Message" rows="2" class="form-control md-textarea"></textarea>
                            <label asp-for="@Model.Message">Your message</label>
                            <span class="text-danger" asp-validation-for="@Model.Message"></span>
                        </div>

                    </div>
                </div>
                <!--Grid row-->
                <div class="text-center text-md-left">
                    <button type="submit" class="btn btn-dark">Send Message</button>
                </div>

                <div class="status">@ViewBag.userMessage</div>
            </form>
        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>San Francisco, CA 94126, USA</p>
                </li>

                <li>
                    <i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+ 01 234 567 89</p>
                </li>

                <li>
                    <i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>contact@mdbootstrap.com</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->

    </div>

</section>
<!--Section: Contact v.2-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
